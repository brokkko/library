<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs'); %>
</head>
<body class="container">
    <link href="/css/header.css" rel="stylesheet" type="text/css">
    <script type="text/javascript" src="/js/client.js" defer></script>

    <header>
        <%- include('./header.ejs'); %>
    </header>
    <main>
        <div class="row">
            <div class="col-sm-8">
                <div class="jumbotron">
                    <ul>
                        <% books.forEach(function(book) { %>

                                <li>
                                    <strong><%= book.author %></strong>
                                    Title <%= book.title %>, release <%= book.release %>, id=<%= book.id %>
                                </li>
                                <button class="deleteButton" data-id="<%=book.id%>">Удалить</button>
                            <%- include('./partials/delete-dialog.ejs'); %>
                                <button class="openButton" data-id="<%=book.id%>">Подробнее</button>

                        <% }); %>
                    </ul>
                    <form>
                        <button id="logOut" type="submit">Log Out</button>
                    </form>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="well">
                    <form >
                        <div>
                            <label for="author">Автор</label>
                            <input type="text" id="author">
                        </div>
                        <div>
                            <label for="title">Название</label>
                            <input type="text" id="title">
                        </div>
                        <div>
                            <label for="release">Дата выпуска</label>
                            <input type="date" id="release">
                        </div>
<!--                        <div>-->
<!--                            <label for="cover">Обложка книги</label>-->
<!--                            <input type="file" id="cover" name="cover" required>-->
<!--                        </div>-->
                        <button id="add-book-button" type="submit">Добавить книгу</button>
                    </form>
                </div>
            </div>

        </div>
    </main>

    <footer>
        <%- include('./partials/footer.ejs'); %>
    </footer>

</body>
</html>